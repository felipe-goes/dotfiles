[user]
	name = Felipe Goes
	email = ogoesfelipe@gmail.com
[init]
	defaultBranch = main
[core]
	pager = delta
	editor = nvim
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true # use n and N to move between diff sections
	side-by-side = true
  # delta detects terminal colors automatically
  # set one of these to disable auto-detection
  # dark = true
  # light = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
[alias]
	a = add
	d = diff
	l = log --graph --decorate
	r = restore
	aa = add -A
	ap = add --patch
	br = branch
	ci = commit
	co = checkout
	cp = cherry-pick
	ds = diff --staged
	lf = log --graph --decorate -p --name-only
	od = push origin --delete
	pr = pull rebase
	rs = restore --staged
	st = status -s
	bra = branch -a
	cdf = clean -df
	fap = fetch -ap
	conf = config --global --edit
	amend = commit --amend
